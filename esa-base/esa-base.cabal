    Conduit.PayloadParser
    Conduit.TimedBuffer
    Conduit.TimedConduit
    Conduit.Extras
    Persistence.Conversion.Types
    Persistence.LogEvent
    Persistence.Logging
    Persistence.DbBackend
    Persistence.DBQuery 
    
  -- Modules included in this library but not exported.
  -- other-modules:

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:
  default-extensions:
        
        BangPatterns
        BinaryLiterals
        ConstraintKinds
        DataKinds
        DefaultSignatures
        DeriveDataTypeable
        DeriveFoldable
        DeriveFunctor
        DeriveGeneric
        DeriveTraversable
        DoAndIfThenElse
        EmptyDataDecls
        ExistentialQuantification
        FlexibleContexts
        FlexibleInstances
        FunctionalDependencies
        GADTs
        GeneralizedNewtypeDeriving
        InstanceSigs
        KindSignatures
        LambdaCase
        MultiParamTypeClasses
        MultiWayIf
        NamedFieldPuns
        NoImplicitPrelude
        OverloadedStrings
        PartialTypeSignatures
        PatternGuards
        PolyKinds
        RankNTypes
        RecordWildCards
        ScopedTypeVariables
        StandaloneDeriving
        TupleSections
        TypeFamilies
        TypeSynonymInstances
        ViewPatterns
        NumericUnderscores
        TypeApplications
        DerivingStrategies

  -- Other library packages from which modules are imported.
  build-depends:       base == 4.*
    , bytestring
    , vector
    , text
    , text-short
    , text-builder
    , rio
    , binary
    , aeson
    , formatting
    , text-show
    , serialise
    , binary-ieee754
    , conduit
    , lens
    , megaparsec
    , reinterpret-cast
    , time
    , bytestring-strict-builder
    , attoparsec
    , attoparsec-binary
    , base64-bytestring-type
    , hashtables-mo
    , colour
    , directory
    , filepath
    , word24
    , bytestring-to-vector
    , refined
    , sorted-list
    , bimap
    , time
    , stm
    , array
    , pretty-show


  -- Directories containing source files.
  hs-source-dirs:      src

  -- Base language which the package is written in.
  default-language:    Haskell2010

  if flag(sle) 
    cpp-options: -DHAS_SLE

  ghc-options: -O0 -g2 -Wall -Wcompat -Widentities -Wincomplete-record-updates
            -Wincomplete-uni-patterns -Wredundant-constraints -Wpartial-fields
            -funbox-strict-fields -freverse-errors

  if flag(optimize)
        ghc-options: -O2 

  if flag(llvm)
        ghc-options: -O2 -fllvm -optlo-O3



